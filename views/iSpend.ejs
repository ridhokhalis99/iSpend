<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <title>iSpend</title>
    <script
src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js">
</script>
</head>
<body>

    <nav class="navbar navbar navbar-dark bg-primary">
        <div class="container">
            <a href="/" class="navbar-brand h2">iSpend</a>
            <a href="/logout" class="nav-link text-light">Logout</a>
        </div>
      </nav>

    <div class="container">
        <div class="mt-5">
            <h2>Halo, <%= profile.fullName %> </h2>
            <h4>Monthly Salary: <%= profile.monthlySalary %> </h4>
            <a href="/profile" class="btn btn-primary mt-2">My Profile</a>
        </div>
        
        
        <div>
            <canvas id="myChart" style="width:100%;max-width:700px"></canvas>
    
        </div>
        <div>
            <form action="/" method="get">
                <div class="row align-items-center">
                    <div class="form-group col-6">
                        <label>Sort by</label>
                        <select name="sort" class="form-control">
                            <option value="" selected>None</option>
                            <option value="name" <%= sort === 'name' ? 'selected' : '' %>>Name</option>
                            <option value="nominal" <%= sort === 'nominal' ? 'selected' : '' %>>Nominal</option>
                            <option value="updatedAt" <%= sort === 'updatedAt' ? 'selected' : '' %>>Date</option>
                        </select>
                    </div>
                    <div class="form-group col-6">
                        <label>Filter by</label>
                        <select name="filter" class="form-control">
                            <option value="" selected>None</option>
                            <option value="Food" <%= filter === 'Food' ? 'selected' : '' %>>Food</option>
                            <option value="Shopping" <%= filter === 'Shopping' ? 'selected' : '' %>>Shopping</option>
                            <option value="Investment" <%= filter === 'Investment' ? 'selected' : '' %>>Investment</option>
                        </select>
                    </div>
                    <div>
                        <button type="submit" class="btn btn-success mt-3 mb-4">Submit</button>
                    </div>
                </div>
            </form>
        </div>
        <div>
            <a href="/addTransaction" class="btn btn-success">Add Transaction</a>
        </div>
        <div>
            <table class="table mt-2">
                <thead>
                    <th>No.</th>
                    <th>Transaction</th>
                    <th>Nominal</th>
                    <th>Date</th>
                    <th>Category</th>
                    <th>Delete</th>
                </thead>
                <tbody>
                    <% transactions.forEach((t,i) => { %>
                        <tr>
                            <td><%= i+1 %></td>
                            <td><%= t.name %> </td>
                            <td><%= rupiahFormat(t.nominal) %></td>
                            <td><%= t.transactionDate %></td>
                            <td><%= t.category %></td>
                            <td>
                                <a href="/deleteTransaction/<%=t.id%>" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <script>

        // const angka1 = document.getElementById("angka1").value
        // const angka2 = document.getElementById("angka2").value
        // const angka3 = document.getElementById("angka3").value
        // const angka4 = document.getElementById("angka4").value
  
          const labels = [
      'Food',
      'Investment',
      'Shopping',
    ];
      
    const data = {
      labels: labels,
      datasets: [{
        label: 'iSpend',
        backgroundColor: ['rgb(38, 230, 90)','rgb(38, 64, 230)','rgb(224, 230, 38)'],
        borderColor: 'rgb(255, 99, 132)',
        data: [<%=tempTotalFood%>,<%=tempTotalInvestment%>,<%=tempTotalShopping%>],
              
      }]
    };
    const config = {
      type: 'bar',
      data: data,
      options: {}
    }
  
          const myChart = new Chart(
      document.getElementById('myChart'),
      config
    );
        </script>
</body>
</html>